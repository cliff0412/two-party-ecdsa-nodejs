{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"target": "es2020",
		"lib": [
			"es2020",
			"es2017",
			"es2015",
			"es6"
		],
		"noImplicitAny": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"declarationMap": false,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true
	},
	"exclude": [
		"**/*.test.*",
		"coverage"
	]
}